<div>
  <table class="classroom_table">
    <tr>
      <th>Name</th>
      <th>Grade Level</th>
      <th>Assigned Teacher</th>
      <th>Actions</th>
    </tr>
    <tbody>
      <% @classrooms.each do |classroom| %>
        <tr>
      <td><%= classroom.name %></td>
      <td><%= classroom.grade_level %></td>
      <td>
        <% if classroom.assign_teacher.present? %>
          <%= classroom.assign_teacher %>
        <% else %>
          Not Assigned
        <% end %>
      </td>
      <td>
        <div class="edit_delete_cont">
          <%= link_to edit_classroom_path(classroom) do %>
            <i class="fas fa-edit"></i> <!-- Edit icon -->
          <% end %>
      
          <%= link_to @classroom, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="fas fa-trash"></i> <!-- Delete icon -->
          <% end %>
        </div>
      </td>
    </tr>
    <% end %>
    </tbody>
  </table>
</div>
