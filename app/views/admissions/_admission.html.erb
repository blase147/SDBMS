<div class="main">
  <table class="admission_table">
    <thead>
      <tr>
        <th>Image</th>
        <th>Full Name</th>
        <th>Date of Birth</th>
        <th>Reg No</th>
        <th>Class</th>
        <th>Admission Date</th>
        <th>Admission Status</th>
        <th>Actions</th> <!-- Add a column for actions -->
      </tr>
    </thead>
    <tbody>
      <% @admissions.each do |admission| %>
        <tr>
          <td>  
            <p>
              <% if admission.photo.attached? %>
                <%= image_tag admission.photo, class: 'image_thumbnail' %>
              <% else %>
                <i class="fas fa-user image_thumbnail"></i>
              <% end %>
            </p>
          </td>

          <td>  
            <p>
              <%= "#{admission.firstname} #{admission.lastname}" %>
            </p>
          </td>

          <td>  
            <p>
              <%= admission.date_of_birth %>
            </p>
          </td>

          <td>
            <p>
              <%= admission.reg_number %>
            </p>
          </td>

          <td>
            <p>
              <%= admission.level %>
            </p>
          </td>

          <td>
            <p>
              <%= admission.admission_date %>
            </p>
          </td>

          <td>
            <p>
              <%= admission.admission_status ? 'Confirmed' : 'Unconfirmed' %>
            </p>
          </td>

          <td>
            <div class="record-container">
              <i class="fas fa-ellipsis-h ellips"></i>
              <div class="ellips_popup" style="display: none;">
                <%= button_to "Toggle Status", toggle_status_admission_path(admission), method: :post %>
                <%= link_to "See Details", admission %> <br> <br>
                <%= button_to "Remove", admission, method: :delete %>
              </div>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


