  </div>

  <div class="grid_item">
    <%= form.label :department, style: "display: block" %>
    <%= form.collection_select :department_id, @departments, :id, :name %>
  </div>




  <div class="grid_item">
    <%= form.label :salary, style: "display: block" %>
