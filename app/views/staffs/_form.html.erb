<%= form_with(model: staff) do |form| %>
  <fieldset class="grid_container">
  <legend>Staff Details</legend>
  <% if staff.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(staff.errors.count, "error") %> prohibited this staff from being saved:</h2>

      <ul>
        <% staff.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid_item">
    <%= form.label :designation, style: "display: block" %>
    <%= form.text_field :designation %>
  </div>

  <div class="grid_item">
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div class="grid_item">
    <%= form.label :firstname, style: "display: block" %>
    <%= form.text_field :firstname %>
  </div>

  <div class="grid_item">
    <%= form.label :lastname, style: "display: block" %>
    <%= form.text_field :lastname %>
  </div>

  <div class="grid_item">
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div class="grid_item">
    <%= form.label :phone, style: "display: block" %>
    <%= form.text_field :phone %>
  </div>

  <div class="grid_item">
    <%= form.label :dateofbirth, style: "display: block" %>
    <%= form.date_field :dateofbirth %>
  </div>

  <div class="grid_item">
    <%= form.label :country, style: "display: block" %>
    <%= form.text_field :country %>
  </div>

  <div class="grid_item">
    <%= form.label :state, style: "display: block" %>
    <%= form.text_field :state %>
  </div>

  <div class="grid_item">
    <%= form.label :lga, style: "display: block" %>
    <%= form.text_field :lga %>
  </div>

  <div class="grid_item">
    <%= form.label :street, style: "display: block" %>
    <%= form.text_field :street %>
  </div>

  <div class="grid_item">
    <%= form.label :department, style: "display: block" %>
    <%= form.text_field :department %>
  </div>

  <div class="grid_item">
    <%= form.label :role, style: "display: block" %>
    <%= form.text_field :role %>
  </div>

  <div class="grid_item">
    <%= form.label :salary, style: "display: block" %>
    <%= form.text_field :salary %>
  </div>

  <div class="grid_item">
    <%= form.label :hire_date, style: "display: block" %>
    <%= form.date_field :hire_date %>
  </div>

  <div class="field">
    <%= form.label :photo %><br />
    <%= form.file_field :photo %>
  </div>
  </fieldset>

<fieldset>
<legend>Roles</legend>
  <label>
  <%= check_box_tag 'role[]', 'teacher' %>
  Teacher
</label><br>

<label>
  <%= check_box_tag 'role[]', 'administrator' %>
  Administrator
</label><br>

<label>
  <%= check_box_tag 'role[]', 'human_resource' %>
  Human Resource
</label><br>

<label>
  <%= check_box_tag 'role[]', 'chef' %>
  Chef
</label><br>

<label>
  <%= check_box_tag 'role[]', 'frontdesk' %>
  Front Desk
</label><br>

<label>
  <%= check_box_tag 'role[]', 'head_of_school' %>
  Head of School
</label><br>

<label>
  <%= check_box_tag 'role[]', 'parent' %>
  Parent
</label><br>

<label>
  <%= check_box_tag 'role[]', 'student' %>
  Student
</label><br>

<label>
  <%= check_box_tag 'role[]', 'driver' %>
  Driver
</label><br>
</fieldset>
  <div>
    <%= form.submit %>
  </div>
<% end %>

<div class="staff_card_container">
  <div class="staff_card"> 
  <% if staff.photo.attached? %>
  <%= image_tag staff.photo, class: 'staff_photo' %>
  <% else %>
  <i class="fas fa-user student_photo"></i>
  <% end %> 
    <div class="staff_details">
      <p><%= staff.title %> <%= staff.firstname %> <%= staff.lastname %></p>
      <p><%= staff.designation %></p>
      <p><%= staff.email %></p>
      <p><%= staff.phone %></p>
    </div>
  </div>
</div>
