<div id="<%= dom_id staff %>">
  <p>
    <strong>Photo:</strong>
    <% if staff.photo.attached? %>
    <%= image_tag staff.photo, class: 'staff_photo' %>
    <% else %>
    <i class="fas fa-user student_photo"></i>
    <% end %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= staff.title %>
  </p>

  <p>
    <strong>Firstname:</strong>
    <%= staff.firstname %>
  </p>

  <p>
    <strong>Lastname:</strong>
    <%= staff.lastname %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= staff.email %>
  </p>

  <p>
    <strong>Phone:</strong>
    <%= staff.phone %>
  </p>

  <p>
    <strong>Dateofbirth:</strong>
    <%= staff.dateofbirth %>
  </p>

  <p>
    <strong>Country:</strong>
    <%= staff.country %>
  </p>

  <p>
    <strong>State:</strong>
    <%= staff.state %>
  </p>

  <p>
    <strong>Lga:</strong>
    <%= staff.lga %>
  </p>

  <p>
    <strong>Street:</strong>
    <%= staff.street %>
  </p>

  <p>
    <strong>Department:</strong>
    <%= staff.department.name %>
  </p>

  <p>
    <strong>Roles:</strong>
    <ul>
      <% @staff.roles.each do |role| %>
        <li><%= role.name %></li>
      <% end %>
    </ul>
  </p>

  <p>
    <strong>Salary:</strong>
    <%= staff.salary %>
  </p>

  <p>
    <strong>Hire date:</strong>
    <%= staff.hire_date %>
  </p>

</div>


